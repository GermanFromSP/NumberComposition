<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/floral_white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ChooseLevelFragment">
    <ImageView
        android:layout_width="125dp"
        android:layout_height="126dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="516dp"
        android:rotation="30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/math_class_svgrepo_com" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="133dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="432dp"
        android:rotation="-30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mathematical_svgrepo_com" />

    <ImageView
        android:layout_width="91dp"
        android:layout_height="99dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="600dp"
        android:rotation="-30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/compass_svgrepo_com" />

    <ImageView
        android:layout_width="154dp"
        android:layout_height="139dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:rotation="30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/open_book_svgrepo_com" />

    <ImageView
        android:layout_width="104dp"
        android:layout_height="101dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="196dp"
        android:rotation="20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/set_square_svgrepo_com" />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите сложность:"
        android:textAlignment="center"
        android:padding="8dp"
        android:background="@drawable/bg_text_rule_top"
        android:textSize="30sp"
        android:elevation="8dp"
        android:fontFamily="@font/fry_pro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
       android:background="@drawable/bg_text_level_body"
        android:elevation="8dp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="ТЕСТОВЫЙ"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_light"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="ЛЕГКИЙ"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_orange_light"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="СРЕДНИЙ"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_dark"
            android:layout_margin="16dp"
            android:text="ТЯЖЕЛЫЙ"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>